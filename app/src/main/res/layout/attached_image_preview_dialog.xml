<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_attached_image_view_dialog"
            android:layout_width="@dimen/image_width_dialog_insert_fragments"
            android:layout_height="@dimen/image_height_dialog_insert_fragments"
            android:layout_marginStart="@dimen/material_margin_8dp"
            android:layout_marginTop="@dimen/material_margin_8dp"
            android:layout_marginEnd="@dimen/material_margin_8dp"
            android:layout_marginBottom="@dimen/material_margin_8dp"
            android:contentDescription="@string/attached_image_dialog_content_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>