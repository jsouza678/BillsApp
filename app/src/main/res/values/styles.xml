<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="recycler_item_label">
        <item name="android:fontFamily">@font/work_sans</item>
        <item name="android:textColor">@color/deepBlack</item>
    </style>

    <style name="recycler_item_value">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/carbonBlack</item>
    </style>

    <style name="result_label_item">
        <item name="android:fontFamily">@font/advent_pro</item>
        <item name="android:textColor">@color/deepBlack</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="result_value_item">
        <item name="android:fontFamily">@font/advent_pro</item>
        <item name="android:textColor">@color/deepBlack</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="result_top_text">
        <item name="android:fontFamily">@font/advent_pro</item>
        <item name="android:textColor">@color/deepBlack</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>
